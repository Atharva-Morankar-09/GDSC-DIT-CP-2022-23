
Question Link - https://www.codechef.com/CDHS2022/problems/OILEST?tab=statement

1) C++ : 

#include <bits/stdc++.h>
using namespace std;
int main() {
	int t;
	cin>>t;
	while(t--){
		int n,m,k;
		cin>>n>>m>>k;
		vector<int>boxesCap(n);
		for(int i=0;i<n;i++){
			cin>>boxesCap[i];
		}
		vector<int>wt(m);
		for(int i=0;i<m;i++){
			cin>>wt[i];
		}
		sort(boxesCap.begin(),boxesCap.end());
		sort(wt.begin(),wt.end());
 
         int i=0;
		 int j=0;
		 int cnt=0;
		 while(i<n && j<m){
			if( wt[j]>=boxesCap[i] && wt[j] <=boxesCap[i]+k ){
                   cnt++;
				   i++;
				   j++;
			}
			else if(wt[j]<boxesCap[i]){
				j++;
			}
			else{
				i++;
 
			}
		}
 
		cout<<cnt<<endl;
	}
}
